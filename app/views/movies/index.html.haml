-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, :id => :ratings_form do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, (@selected_ratings.include? rating), :id => "ratings_#{rating}"
  = submit_tag 'Refresh', :id => :ratings_submit

%table#movies
  %thead
    %tr
      %th{class: ("hilite" if @ordering == "title"), :id => "title_header"}= link_to "Movie Title", movies_path(:order => :title, :ratings => @selected_ratings)
      %th Rating
      %th{class: ("hilite" if @ordering == "release_date"), :id => "release_date_header"}= link_to "Release Date", movies_path(:order => :release_date, :ratings => @selected_ratings)
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
